<IfModule mod_rewrite.c>
  RewriteEngine On

  # Se for um arquivo ou diretório existente, serve normalmente
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # Caso contrário, redireciona tudo para index.html
  RewriteRule ^ index.html [L]
</IfModule>

